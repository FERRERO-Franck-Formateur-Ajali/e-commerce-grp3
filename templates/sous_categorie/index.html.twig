{% extends 'base.html.twig' %}

{% block title %}Hello SousCategorieController!{% endblock %}
{% block body %}
    <section>
        <div class="container">
            <div class="row">
                <div class="col-sm-3">
                    <div class="left-sidebar">
                        <h2>Category {{nom}} {{cat}}</h2>
                        <div class="panel-group category-products" id="accordian">
                            <!--category-productsr-->
                            {% for cat in categories %}
                                <div class="panel panel-default">
                                    <div class="panel-heading">
                                        <h4 class="panel-title">
                                            <a data-toggle="collapse" data-parent="#accordian" href="#{{cat.nom}}">
                                                <span class="badge pull-right">
                                                    <i class="fa fa-plus"></i>
                                                </span>
                                                {{ cat.nom }}
                                            </a>
                                        </h4>
                                    </div>
                                    <div id="{{cat.nom}}" class="panel-collapse collapse">
                                        <div class="panel-body">
                                            {% for sub in souscategories %}
                                                {% if sub.categorie.id == cat.id %}
                                                    <ul>
                                                        <li>
                                                            <a href="">{{sub.nom}}</a>
                                                        </li>
                                                    </ul>
                                                {% endif %}
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}

                        </div>
                        <!--/category-products-->



                        <div class="shipping text-center">
                            <!--shipping-->
                            <img src="{{ asset('assets/images/home/shipping.jpg') }}" alt=""/>
                        </div>
                        <!--/shipping-->

                    </div>
                </div>

                <div class="col-sm-9 padding-right">
                    <div class="features_items">
                        <!--features_items-->
                        <h2 class="title text-center">Features Items</h2>
                        {% for art in article %}
                            <div class="col-sm-4">
                                <div class="product-image-wrapper">
                                    <div class="single-products">
                                        <div class="productinfo text-center">
                                            <img src="{{ asset('assets/images/home/product1.jpg') }}" alt=""/>
                                            <h2>{{art.prix}}€</h2>
                                            <p>{{art.nom}}</p>
                                            <a href="#" class="btn btn-default add-to-cart">
                                                <i class="fa fa-shopping-cart"></i>Add to cart</a>
                                        </div>
                                        <div class="product-overlay">
                                            <div class="overlay-content">
                                                <h2>{{art.prix}}€</h2>
                                                <p>{{art.nom}}</p>
                                                <a href="#" class="btn btn-default add-to-cart">
                                                    <i class="fa fa-shopping-cart"></i>Add to cart</a>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="choose">
                                        <ul class="nav nav-pills nav-justified">
                                            <li>
                                                <a href="#">
                                                    <i class="fa fa-plus-square"></i>Add to wishlist</a>
                                            </li>
                                            <li>
                                                <a href="#">
                                                    <i class="fa fa-plus-square"></i>Add to compare</a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}


                    </div>
                    <!--features_items-->



                </div>
            </div>
        </div>
    </section>


{% endblock %}

