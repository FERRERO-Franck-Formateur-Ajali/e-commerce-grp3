{% extends 'base.html.twig' %}

{% block title %}Votre Espace Client{% endblock %}

{% block body %}
<div class="container">
			<div class="row">
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Changer vos information personnelle</h5>
                            <p class="card-text">Nom: {{app.user.client.nom}} </br>
                            Prénom: {{app.user.client.prenom}} </br>
                            téléphone: {{app.user.client.phone}} 
                            </p>
                            <a href="{{ path('account_modifierclient', {'id': app.user.client.id}) }}" class="btn btn-primary">Modifier votre profile</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Vos adresses de facturation</h5>
                            <p class="card-text">Modifier les adresses et les préférences de facturation de vos commandes</p>
                             <a href="{{ path('account_adressefacturation_show' , {'id': app.user.client.id}) }}" class="btn btn-primary">Voir toutes vos adresses</a>
                            <a href="{{ path('account_adressefacturation_edit', {'id': app.user.client.id} ) }}" class="btn btn-primary">Modifier vos adresses</a>
                            <a href="{{ path('account_adressefacturation_ajout')  }}" class="btn btn-primary">Ajouter une adresse</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Vos adresses de livraison</h5>
                            <p class="card-text">Modifier les adresses et les préférences de livraison de vos commandes</p>
                             <a href="{{ path('account_adresselivraison_show', {'id': app.user.client.id})  }}" class="btn btn-primary">Voir toutes vos adresses</a>
                            <a href="{{ path('account_adresselivraison_edit', {'id': app.user.client.id})  }}" class="btn btn-primary">Modifier vos adresses</a>
                            <a href="{{ path('account_adresselivraison_ajout')  }}" class="btn btn-primary">Ajouter une adresse</a>
                        </div>
                    </div>
                </div>
                <div class="col-sm-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">Vos commandes</h5>
                            <p class="card-text">Un historique de vos achats sur notre plateforme</p>
                        </div>
                    </div>
                </div>
            </div>
</div>
{% endblock %}
