{% extends 'base.html.twig' %}

{% block title %}Cash - Zone | Panier{% endblock %}

{% block body %}
<div class="cart-page">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-8">
                        <div class="cart-page-inner">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead class="thead-dark">
                                        <tr>
                                            <th>Article</th>
                                            <th>Prix</th>
                                            <th>Quantité</th>
                                            <th>Total</th>
                                            <th>Supprimer</th>
                                        </tr>
                                    </thead>
                                    <tbody class="align-middle">
                                    {% for pan in panier %}
                                        <tr>
                                            <td>
                                                <div class="img">
                                                    <a href="{{path('article', {'slug':pan.article.slug})}}"><img src="{{ asset('assets/images/shop/' ~ pan.article.image ~ '') }}" alt="Image"></a>
                                                    <p>{{pan.article.nom}}</p>
                                                </div>
                                            </td>
                                            <td>{{pan.article.prix}}€</td>
                                            <td>
                                                <div class="qty">
                                                    <button class="btn-minus"><a href="{{path('panier_del', {'slug':pan.article.slug})}}"><i class="fa fa-minus"></i></a></button>
                                                    <input type="text" value="{{pan.quantite}}">
                                                    <button class="btn-plus"><a href="{{path('panier_add', {'slug':pan.article.slug})}}"><i class="fa fa-plus"></i></a></button>
                                                </div>
                                            </td>
                                            <td>{{pan.quantite * pan.article.prix}}€</td>
                                            <td><button><a href="{{path('panier_delete', {'slug':pan.article.slug})}}"><i class="fa fa-trash"></i></a></button></td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="cart-page-inner">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="coupon">
                                        <input type="text" placeholder="Coupon Code">
                                        <button>Appliquer</button>
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="cart-summary">
                                        <div class="cart-content">
                                            <h1>Récapitulatif de Commande</h1>
                                            <p>Articles<span>$99</span></p>
                                            <p>Livraison<span>$1</span></p>
                                            <h2>Montant total<span>$100</span></h2>
                                        </div>
                                        <div class="cart-btn">
                                            <button>Payer</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
